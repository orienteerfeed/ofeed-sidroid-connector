<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools" >

    <!--
    ********************************************************************************************
    * O Feed settings.
    ******************************************************************************************** -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        tools:ignore="ContentDescription" >

        <!--
        ********************************************************************************************
        * Settings.
        ******************************************************************************************** -->
        <TextView
            android:id="@+id/settings_upload_interval_title"
            style="@style/medium_bold_wrap_content"
            android:text="@string/upload_interval"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Button
            android:id="@+id/settings_upload_interval"
            style="@style/button_style"
            android:layout_marginTop="8dp"
            android:text="30 sec"
            tools:ignore="HardcodedText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/settings_upload_interval_title" />

        <!--
        ********************************************************************************************
        * SI-Droid settings.
        ******************************************************************************************** -->
        <TextView
            android:id="@+id/settings_si_droid_title"
            style="@style/medium_bold_wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/si_droid"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/settings_upload_interval" />

        <EditText
            android:id="@+id/settings_si_droid_port"
            style="@style/medium_wrap_content"
            android:layout_width="0dp"
            android:ellipsize="none"
            android:inputType="number"
            android:hint="@string/port_number"
            android:singleLine="true"
            android:importantForAutofill="no"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/settings_ofeed_server_help"
            app:layout_constraintTop_toBottomOf="@id/settings_si_droid_title"
            tools:ignore="HardcodedText" />
        <ImageView
            android:id="@+id/settings_si_droid_port_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/help"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/settings_si_droid_port"
            app:layout_constraintBottom_toBottomOf="@id/settings_si_droid_port" />

        <!--
        ********************************************************************************************
        * OFeed settings.
        ******************************************************************************************** -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/settings_ofeed_title"
            style="@style/medium_bold_wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/ofeed"
            app:drawableStartCompat="@drawable/ofeed"
            android:drawablePadding="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/settings_si_droid_port" />

        <EditText
            android:id="@+id/settings_ofeed_server"
            style="@style/medium_wrap_content"
            android:layout_width="0dp"
            android:ellipsize="none"
            android:inputType="text|textNoSuggestions"
            android:hint="@string/server"
            android:singleLine="true"
            android:importantForAutofill="no"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/settings_ofeed_server_help"
            app:layout_constraintTop_toBottomOf="@id/settings_ofeed_title"
            tools:ignore="HardcodedText" />
        <ImageView
            android:id="@+id/settings_ofeed_server_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/help"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/settings_ofeed_server"
            app:layout_constraintBottom_toBottomOf="@id/settings_ofeed_server" />

        <EditText
            android:id="@+id/settings_ofeed_event_id"
            style="@style/medium_wrap_content"
            android:layout_width="0dp"
            android:ellipsize="none"
            android:inputType="text|textNoSuggestions"
            android:hint="@string/event_id"
            android:singleLine="true"
            android:importantForAutofill="no"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/settings_ofeed_server_help"
            app:layout_constraintTop_toBottomOf="@id/settings_ofeed_server" />
        <EditText
            android:id="@+id/settings_ofeed_event_password"
            style="@style/medium_wrap_content"
            android:layout_width="0dp"
            android:ellipsize="none"
            android:inputType="textPassword"
            android:hint="@string/password"
            android:singleLine="true"
            android:importantForAutofill="no"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/settings_ofeed_password_visibility"
            app:layout_constraintTop_toBottomOf="@id/settings_ofeed_event_id" />
        <ImageView
            android:id="@+id/settings_ofeed_password_visibility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/visibility_off"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/settings_ofeed_event_password"
            app:layout_constraintBottom_toBottomOf="@id/settings_ofeed_event_password" />

        <Button
            android:id="@+id/settings_ofeed_qr_code"
            style="@style/button_style"
            android:layout_marginTop="8dp"
            android:text="@string/qr_code_scan"
            android:gravity="start|center_vertical"
            android:drawableLeft="@drawable/qr_code"
            tools:ignore="RtlHardcoded"
            android:drawablePadding="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/settings_ofeed_event_password" />
        <Button
            android:id="@+id/settings_ofeed_http_timeouts"
            style="@style/button_style"
            android:layout_marginStart="32dp"
            android:text="@string/timeouts"
            android:gravity="start|center_vertical"
            app:layout_constraintStart_toEndOf="@id/settings_ofeed_qr_code"
            app:layout_constraintTop_toTopOf="@id/settings_ofeed_qr_code" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
