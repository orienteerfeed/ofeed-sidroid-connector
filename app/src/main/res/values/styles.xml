<?xml version="1.0" encoding="utf-8" ?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="medium_wrap_content" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="medium_bold_wrap_content" parent="medium_wrap_content">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_style" parent="Widget.Material3.Button">
        <!-- Copy of applicable items from style medium_wrap_content. -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <!-- Button style. -->
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:backgroundTint">@color/button_tint_color</item>
    </style>

    <style name="button_style_24sp" parent="button_style">"
        <item name="android:textSize">24sp</item>
    </style>

</resources>
